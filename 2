#include <iostream>
#include <fstream>
using namespace std;

int main() {
    setlocale(LC_ALL, "rus");

    ofstream out1;
    out1.open("a1.txt");
    if (out1.is_open()) out1 << "1.2   3.4   -5.6   7.6   -1.7   -2.8" << endl;
    out1.close();

    ofstream out2;
    out2.open("a2.txt");
    if (out2.is_open()) out2 << "4.5   -1.6   -4.8   9.6   -7.1" << endl;
    out2.close();

    ifstream file1("a1.txt");
    ifstream file2("a2.txt");

    double number1, number2;
    double product = 1.0;

    while (file1 >> number1) if (number1 < 0) product = product * number1;

    while (file2 >> number2) if (number2 < 0) product = product * number2;

    file1.close();
    file2.close();

    cout << "Произведение отрицательных элементов двух файлов: " << product << endl;

    return 0;
}
