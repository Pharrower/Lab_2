#include <iostream>
#include <fstream>
#include <string> 
using namespace std;

int main() {
    setlocale(LC_ALL, "rus");

    ofstream out("a.txt");
    out << "1  3  -1  -4  6  8  9  -3";
    out.close();

    ifstream file("a.txt");

    int number;
    int max_n = 0;
    int cnt = 1;

    while (file >> number) {
        if (cnt % 2 == 0 && number < 0 && number < max_n) {
            max_n = number;
        }
        cnt++;
    }

    file.close();
    
    cout << "Наибольший отрицательный элемент на чётной позиции: " << max_n;

    return 0;
}
